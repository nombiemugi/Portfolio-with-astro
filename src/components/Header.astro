---
import '../styles/global.css';
import Home from '../components/Home.astro';
import Navigation from '../components/Navigation.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import Hamburger from '../assets/svg/hamburguer.svg';
import Quit from '../assets/svg/quit.svg';
import Socials from '../components/Socials.astro';
import Switch from './Switch.astro';
---

<header class="mt-2 gap-10">
  <nav class="flex items-center justify-around gap-0.5">
    <div class="menu-header">
      <Home />
    </div>

    <Navigation />

    <div class="flex items-center gap-5">
      <div class="hidden sm:block">
        <Socials />
      </div>

      <Switch />

      <!-- BotÃ³n hamburguesa -->
      <button id="hamburgerButton" class="sm:hidden" aria-label="Open menu">
        <Hamburger />
      </button>
    </div>
  </nav>

  <!-- SIDEBAR MOBILE -->
  <div class="sidebar hidden flex-col">
    <ul class="flex flex-col justify-start pl-5 gap-4 font-medium tracking-[var(--tracking-tightest)] w-auto">
      <li>
        <button id="quitButton" aria-label="Close menu">
          <Quit />
        </button>
      </li>

      <li>
        <a href="/" class="hover:text-[var(--accent)]">Home</a>
      </li>

      <li>
        <a href="/projects" class="hover:text-[var(--accent)]">Projects</a>
      </li>

      <li>
        <a href="/about" class="hover:text-[var(--accent)]">About</a>
      </li>

      <hr class="my-2" />

      <li>
        <Socials />
      </li>
    </ul>
  </div>
</header>

<script>
    document.addEventListener('DOMContentLoaded', () => {
      const hamburgerButton = document.getElementById('hamburgerButton');
      const sidebar = document.querySelector('.sidebar');
      const quitButton = document.getElementById('quitButton');

      if (!hamburgerButton || !sidebar || !quitButton) return;

      hamburgerButton.addEventListener('click', () => {
        sidebar.classList.remove('hidden');
        sidebar.classList.add('flex');
      });

      quitButton.addEventListener('click', () => {
        sidebar.classList.add('hidden');
        sidebar.classList.remove('flex');
      });
    });

</script>

<style>
.menu-header {
  display: flex;
  justify-content: space-between;
  gap: 0.5rem;
  padding: 1.5rem;
}

.sidebar {
  position: fixed;
  top: 0;
  right: 0;
  height: 100vh;
  width: 250px;
  z-index: 999;

  /* Fondo tipo glassmorphism */
  background-color: rgba(40, 40, 40, 0.7);
  backdrop-filter: blur(6px);
  box-shadow: -10px 0 10px rgba(0, 0, 0, 0.1);
}
</style>






